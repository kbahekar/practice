//Check number palindrome



function pal(str){
  let newStr =  str.toLowerCase();
  console.log(newStr)
  let left = 0;
  let right = newStr.length-1;
  while(right > left){
      if(newStr[right] !== newStr[left]){
            return false
      }
      left ++;
      right --;
  }
  return true
    
}
console.log(pal('madam'))










function reverse(n){
    let reverse =0
    let num = n
    while(n !==0){
        let remain = Math.floor(n%10);
        reverse = reverse*10 + remain;
        n = Math.floor(n/10)
    }
    // console.log(reverse)
    if(reverse == num){
        console.log('Number is palindrome')
    }else {
        console.log('Number is not palindrome')
    }
    
}

reverse(121)


