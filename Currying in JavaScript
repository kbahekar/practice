
//function carrying




function addition(a){
    return function(b){
        return function(c){
         return   a+b+c;
        }
    }
}


console.log(addition(1)(2)(3))


userData = {
    name:'kamlesh',
    age:28
}



function getUser(obj){
    return function(user){
        return obj[user]
    }
}
console.log(getUser(userData)('age'))


//Infinite Currying in JavaScript 

function add(a){
    return function(b){
        if(b) return add(a+b);
        return a;
    }
}

console.log(add(12)(12)());
